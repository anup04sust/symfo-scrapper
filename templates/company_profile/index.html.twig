{% extends 'base.html.twig' %}

{% block title %}CompanyProfile index{% endblock %}

{% block body %}
    <h1>CompanyProfile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company_name</th>
                <th>Registration_code</th>
                <th>Vat</th>
                <th>Adress</th>
                <th>Mobile_phone</th>
                <th>Turnover</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company_profile in company_profiles %}
            <tr>
                <td>{{ company_profile.id }}</td>
                <td>{{ company_profile.companyName }}</td>
                <td>{{ company_profile.registrationCode }}</td>
                <td>{{ company_profile.vat }}</td>
                <td>{{ company_profile.adress }}</td>
                <td>{{ company_profile.mobilePhone }}</td>
                <td>{{ company_profile.turnover }}</td>
                <td>{{ company_profile.createdAt ? company_profile.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company_profile.updatedAt ? company_profile.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_company_profile_show', {'id': company_profile.id}) }}">show</a>
                    <a href="{{ path('app_company_profile_edit', {'id': company_profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_company_profile_new') }}">Create new</a>
{% endblock %}
